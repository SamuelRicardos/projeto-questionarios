{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Questionários",
    "version": "1.0.0",
    "description": "Documentação da API de Questionários"
  },
  "servers": [
    {
      "url": "http://localhost:3001"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Registrar um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso"
          },
          "400": {
            "description": "Usuário já cadastrado"
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Usuários"],
        "summary": "Registrar um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso"
          },
          "400": {
            "description": "Usuário já cadastrado"
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    }
  }
}
